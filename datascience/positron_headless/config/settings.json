// Settings imported from Visual Studio Code
{
  "[quarto]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "other": "on",
      "strings": "on"
    },
    "editor.quickSuggestionsDelay": 50,
    "editor.suggestOnTriggerCharacters": true,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordBasedSuggestions": "off",
    "editor.wordWrap": "on"
  },
  "debug.allowBreakpointsEverywhere": true,
  "debug.console.fontSize": 12,
  "debugpy.debugJustMyCode": false,
  "editor.detectIndentation": false,
  "editor.inlineCompletionsAccessibilityVerbose": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.fontSize": 12,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestions": {
    "comments": true,
    "other": true,
    "strings": true
  },
  "editor.quickSuggestionsDelay": 50,
  "editor.stickyScroll.enabled": false,
  "editor.suggest.localityBonus": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 88,
  "extensions.ignoreRecommendations": false,
  "files.associations": {
    "renv.lock": "json"
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "git.confirmSync": true,
  "git.openRepositoryInParentFolders": "never",
  "interactiveWindow.executeWithShiftEnter": true,
  "jupyter.debugJustMyCode": false,
  "jupyter.enableExtendedPythonKernelCompletions": true,
  "kernelSupervisor.shutdownTimeout": "when idle",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "npm.fetchOnlinePackageInfo": false,
  "python.environmentProviders.enable": {
    "Venv": false,
    "uv": false
  },
  "python.interpreters.exclude": [
    "/usr/bin/python",
    "/usr/bin/python3",
    "/bin/python",
    "/bin/python3"
  ],
  "python.interpreters.include": [
    "~/miniconda/bin/python"
  ],
  "python.missingPackage.severity": "Warning",
  "python.terminal.activateEnvironment": true,
  "python.terminal.shellIntegration.enabled": true,
  "quarto.usePipQuarto": false,
  "remote.autoForwardPortsSource": "hybrid",
  "ruff.lineLength": 88,
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "telemetry.feedback.enabled": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "icon": "terminal-bash",
      "path": "zsh"
    },
    "bash": {
      "icon": "terminal-bash",
      "path": "bash"
    }
  },
  "terminal.integrated.profiles.windows": {
    "bash.exe": {
      "args": [],
      "path": "C:\\Program Files\\Git\\bin\\bash.exe"
    }
  },
  "workbench.colorTheme": "Default High Contrast",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  }
}
